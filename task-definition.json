{
  "family": "slackgauntlet",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "<your-account-id>.dkr.ecr.<region>.amazonaws.com/slackgauntlet-app:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DATABASE_URL",
          "value": "postgresql://slackgauntlet:%5BWtLW7JrAVV0i1CN-A48@slackgauntlet-db:5432/slackgauntlet"
        },
        {
          "name": "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
          "value": "pk_test_c2Vuc2libGUtYmFib29uLTQ3LmNsZXJrLmFjY291bnRzLmRldiQ"
        },
        {
          "name": "CLERK_SECRET_KEY",
          "value": "sk_test_VxgENMgFEn22CfOcjuvK5VCynZIMGXyiNoG0ElHHrS"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/slackgauntlet",
          "awslogs-region": "<your-region>",
          "awslogs-stream-prefix": "app"
        }
      }
    },
    {
      "name": "db",
      "image": "<your-account-id>.dkr.ecr.<region>.amazonaws.com/slackgauntlet-db:latest",
      "portMappings": [
        {
          "containerPort": 5432,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "POSTGRES_USER",
          "value": "slackgauntlet"
        },
        {
          "name": "POSTGRES_PASSWORD",
          "value": "[WtLW7JrAVV0i1CN-A48"
        },
        {
          "name": "POSTGRES_DB",
          "value": "slackgauntlet"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "postgres-data",
          "containerPath": "/var/lib/postgresql/data",
          "readOnly": false
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "postgres-data",
      "efsVolumeConfiguration": {
        "fileSystemId": "<your-efs-id>",
        "rootDirectory": "/"
      }
    }
  ]
} 